{
  "name": "service.golos.io",
  "version": "0.0.1",
  "author": "Golos.io",
  "license": "MIT",
  "description": "Golos.io back-end services",
  "engines": {
    "node": ">=8.9.4"
  },
  "babel": {
    "comments": false,
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "docker:dev": "docker-compose --file ./docker-compose-dev.yml down && docker-compose --file ./docker-compose-dev.yml up -d --build",
    "docker:dev:down": "docker-compose --file ./docker-compose-dev.yml down",
    "dev:win": "./scripts/dev.bat",
    "dev:down": "docker-compose --file .\\docker-compose-dev.yml down",
    "console": "docker attach pushgolosio_datastore_1",
    "build:docker": "yarn && lerna run build && docker-compose build && lerna run clean",
    "start": "lerna bootstrap && lerna run build && babel-node ./packages/push.golos.io/src/server.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-nodejs": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "lerna": "^2.11.0",
    "npm-check-updates": "^2.14.2",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "express": "^4.16.3",
    "golos-js": "^0.6.3",
    "lodash": "^4.17.10",
    "minimist": "1.2.0",
    "morgan": "^1.9.0",
    "node-gcm": "^1.0.2",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^5.0.2",
    "socketcluster": "^13.1.7",
    "socketcluster-client": "^13.0.0",
    "tarantool-driver": "tarantool/node-tarantool-driver#master"
  }
}
