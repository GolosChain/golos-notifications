{
  "name": "service.golos.io",
  "version": "0.0.1",
  "author": "Golos.io",
  "license": "MIT",
  "description": "Golos.io back-end services",
  "engines": {
    "node": ">=8.9.4"
  },
  "babel": {
    "comments": false,
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "build:docker": "yarn && lerna run build && docker-compose build && lerna run clean",
    "dev:win": "./scripts/win/dev.bat",
    "start": "lerna bootstrap && lerna run build && babel-node ./packages/push.golos.io/src/server.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.5",
    "eslint": "^4.19.1",
    "eslint-config-nodejs": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "lerna": "^2.11.0",
    "nodemon": "^1.17.4",
    "npm-check-updates": "^2.14.2",
    "rimraf": "^2.6.2",
    "webpack": "^4.8.1"
  },
  "dependencies": {}
}
