{
  "name": "push.golos.io",
  "description": "Golos.io push notification service",
  "version": "0.0.2",
  "author": "Golos.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GolosChain/golos-notifications.git"
  },
  "contributors": [
    {
      "name": "Alex Gu",
      "email": "sualexx@aol.com"
    }
  ],
  "keywords": [
    "golos.io",
    "websocket",
    "server",
    "realtime",
    "cluster",
    "scalable",
    "push",
    "notification"
  ],
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "./lib/server.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "yarn clean && cross-env BABEL_ENV=production babel src --out-dir lib",
    "build:docker": "docker-compose build",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "mocha --require babel-core/register --require babel-polyfill --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node examples/",
    "cover": "istanbul cover _mocha -- --require babel-core/register --require babel-polyfill --recursive",
    "lint": "eslint src test",
    "production": "NODE_ENV=production node ./lib/server.js"
  },
  "dependencies": {
    "chain.golos.lib": "^0.0.2",
    "golos-js": "^0.6.3",
    "lodash": "^4.17.10",
    "minimist": "1.2.0",
    "node-gcm": "^0.14.10",
    "sc-errors": "^1.4.0",
    "sc-framework-health-check": "^2.0.0",
    "sc-hot-reboot": "^1.0.0",
    "scc-broker-client": "^5.0.2",
    "socketcluster": "^13.0.1",
    "socketcluster-client": "^13.0.0"
  }
}
