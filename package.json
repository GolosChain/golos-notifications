{
  "name": "service.golos.io",
  "version": "0.0.1",
  "author": "Golos.io",
  "license": "MIT",
  "description": "Golos.io back-end services",
  "engines": {
    "node": ">=8.9.4"
  },
  "babel": {
    "comments": false,
    "env": {
      "development": {
        "presets": [
          ["env", {
            "targets": {
              "node": "current"
            }
          }]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      },
      "production": {
        "presets": [
          ["env", {
            "targets": {
              "node": "current"
            }
          }]
        ],
        "plugins": [
          "transform-class-properties",
          "transform-object-rest-spread"
        ]
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "build:docker": "yarn && lerna run build && docker-compose build && lerna run clean",
    "dev": "lerna bootstrap && babel-node ./packages/push.golos.io/lib/server.js",
    "start": "lerna bootstrap && lerna run build && node ./packages/push.golos.io/lib/server.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-nodejs": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "lerna": "^2.10.2",
    "nodemon": "^1.17.3",
    "npm-check-updates": "^2.14.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.6.0"
  },
  "dependencies": {}
}
